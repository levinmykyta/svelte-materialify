{
  "name": "svelte-materialify",
  "version": "0.0.1",
  "description": "A material design framework/component library for Svelte, with full support for light and dark themes and customisability.",
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm:watch:*\" -k",
    "start": "concurrently \"npm:build\" \"npm:css\"",
    "build": "rollup -c",
    "watch:build": "rollup -c -w",
    "css": "sass src/styles/_global.scss:dist/global.css -I theme -s compressed --no-source-map",
    "watch:css": "npm run css -- --watch",
    "test": "jest",
    "precommit": "lint-staged",
    "lint": "concurrently \"npm:lint:css\" \"npm:lint:js\"",
    "lint:fix": "concurrently \"npm:lint:css:fix\" \"npm:lint:js:fix\"",
    "lint:css": "stylelint src/**/*.scss --syntax scss",
    "lint:css:fix": "stylelint src/**/*.scss --syntax scss --fix",
    "lint:js": "eslint . --ext .svelte,.js",
    "lint:js:fix": "eslint . --ext .svelte,.js --fix",
    "check": "svelte-check --workspace src/components",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md",
    "release": "np"
  },
  "lint-staged": {
    "src/**/*.{js,svelte}": [
      "eslint --ext .svelte,.js --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ]
  },
  "np": {
    "branch": "master",
    "cleanup": false,
    "yarn": true,
    "releaseDraft": false
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/preset-env": "^7.11.0",
    "@rollup/plugin-commonjs": "^13.0.2",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/svelte": "^3.0.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.2.2",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "np": "^6.3.2",
    "postcss": "^7.0.32",
    "rollup": "^2.26.6",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^7.0.0",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "svelte": "^3.24.1",
    "svelte-check": "^1.0.27",
    "svelte-htm": "^1.1.1",
    "svelte-jester": "^1.0.6",
    "svelte-preprocess": "^4.1.1"
  },
  "files": [
    "src",
    "dist"
  ],
  "peerDependencies": {
    "sass": "^1.26.10",
    "svelte-preprocess": "^4.0.10"
  },
  "peerDependenciesMeta": {
    "sass": {
      "optional": true
    },
    "svelte-preprocess": {
      "optional": true
    }
  },
  "dependencies": {
    "material-ripple-effect": "^1.0.3",
    "obj-str": "^1.0.3",
    "uid": "^1.0.0"
  },
  "author": "TheComputerM",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/TheComputerM/svelte-materialify",
    "type": "git",
    "directory": "packages/svelte-materialify"
  },
  "keywords": [
    "svelte",
    "sveltejs",
    "svelte-components",
    "material-design",
    "material",
    "material-theme",
    "material-components",
    "component-library",
    "svelte-material",
    "ui",
    "ui-components",
    "ui-kit"
  ],
  "engines": {
    "node": ">=12.x"
  }
}
