{
  "name": "svelte-materialify",
  "version": "0.0.1",
  "description": "A material design framework/component library for Svelte, with full support for light and dark themes and customisability.",
  "svelte": "src/index.js",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm:watch:*\" \"npm:site:dev\" -k",
    "start": "concurrently \"npm:build\" \"npm:css\" \"npm:copy-css\" \"npm:site:export\" -k",
    "build": "rollup -c",
    "watch:build": "rollup -c -w",
    "css": "sass src/styles/_global.scss:dist/global.css -I theme -s compressed --no-source-map",
    "watch:css": "npm run css -- --watch",
    "copy-css": "copy-and-watch dist/global.css site/static",
    "watch:copy-css": "npm run copy-css -- --watch",
    "test": "jest",
    "lint:css": "stylelint src/**/*.scss --syntax scss",
    "lint:css:fix": "stylelint src/**/*.scss --syntax scss --fix",
    "lint:js": "eslint src __tests__ --ext .svelte,.js",
    "lint:js:fix": "eslint src __tests__ --ext .svelte,.js --fix",
    "check": "svelte-check --workspace src/components",
    "site:dev": "cd site && npm run dev",
    "site:build": "cd site && npm run build",
    "site:export": "npm run copy-css && cd site && npm run export",
    "site:deploy": "cd site && npm run deploy",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md",
    "release": "np"
  },
  "lint-staged": {
    "src/**/*.{js,svelte}": [
      "eslint --ext .svelte,.js --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "np": {
    "branch": "master",
    "cleanup": false,
    "yarn": false,
    "releaseDraft": false
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@rollup/plugin-commonjs": "^13.0.2",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@testing-library/jest-dom": "^5.11.2",
    "@testing-library/svelte": "^3.0.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.2.2",
    "concurrently": "^5.3.0",
    "conventional-changelog-cli": "^2.0.34",
    "copy-and-watch": "^0.1.5",
    "eslint": "^7.6.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-svelte3": "^2.7.3",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "np": "^6.3.2",
    "postcss": "^7.0.32",
    "rollup": "^2.23.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-terser": "^6.1.0",
    "sass": "^1.26.10",
    "stylelint": "^13.6.1",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.18.0",
    "svelte-check": "^1.0.9",
    "svelte-htm": "^1.1.1",
    "svelte-jester": "^1.0.6",
    "svelte-preprocess": "^4.0.10"
  },
  "files": [
    "src",
    "dist"
  ],
  "peerDependencies": {
    "sass": "^1.26.10",
    "svelte": "^3.24.0",
    "svelte-preprocess": "^4.0.10"
  },
  "dependencies": {
    "material-ripple-effect": "^1.0.3"
  },
  "author": "TheComputerM",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/TheComputerM/svelte-materialify",
    "type": "git"
  },
  "keywords": [
    "svelte",
    "sveltejs",
    "svelte-components",
    "material-design",
    "material",
    "material-theme",
    "material-components",
    "component-library",
    "svelte-material",
    "ui",
    "ui-components",
    "ui-kit"
  ]
}
